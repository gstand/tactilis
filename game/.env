# ===========================================
# Unity Meta Quest 3 MR Project Configuration
# ===========================================

# Project Settings
UNITY_VERSION=6000.3.7f1
PROJECT_NAME=timer-and-score-component
TARGET_PLATFORM=Android

# Meta Quest 3 Configuration
XR_DEVICE=Meta Quest 3
XR_SDK=OpenXR
PASSTHROUGH_ENABLED=true
MIXED_REALITY_MODE=true

# Display Mode (AR overlay on real world)
RENDER_MODE=WorldSpace
CAMERA_BACKGROUND=Passthrough
UI_RENDER_MODE=WorldSpace

# Required Unity Packages
# Install via Window > Package Manager
PACKAGE_XR_INTERACTION_TOOLKIT=com.unity.xr.interaction.toolkit
PACKAGE_XR_PLUGIN_MANAGEMENT=com.unity.xr.management
PACKAGE_OPENXR=com.unity.xr.openxr
PACKAGE_META_XR_SDK=com.meta.xr.sdk.all
PACKAGE_TEXTMESHPRO=com.unity.textmeshpro
PACKAGE_INPUT_SYSTEM=com.unity.inputsystem

# UI Configuration
UI_COLOR_SCHEME=CalmingBlue
UI_CANVAS_RENDER_MODE=WorldSpace
UI_FOLLOW_DISTANCE_METERS=2.0
UI_SCALE=0.001

# Session Settings
SESSION_DURATION_SECONDS=30
SCORE_PER_CLICK=1

# Build Settings
ANDROID_MIN_SDK=32
ANDROID_TARGET_SDK=34
SCRIPTING_BACKEND=IL2CPP
